{
  "name": "restaurant-discovery-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:backend": "npm run build --prefix backend && node backend/dist/index.js",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:full": "concurrently -k -n backend,frontend -c blue,green \"npm:dev:backend\" \"npm:dev:frontend\"",
    "check:backend-health": "node -e \"fetch('http://localhost:3001/api/health').then(r=>r.text()).then(t=>console.log(t)).catch(e=>{console.error(e);process.exit(1)})\"",
    "check:frontend-health": "node -e \"fetch('http://localhost:3000/api/health').then(r=>r.text()).then(t=>console.log(t)).catch(e=>{console.error(e);process.exit(1)})\""
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^20",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "bcryptjs": "^3.0.2",
    "concurrently": "^9.0.1",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "mongodb-memory-server": "^10.3.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vercel": "^48.9.0",
    "vitest": "^4.0.5"
  }
}
